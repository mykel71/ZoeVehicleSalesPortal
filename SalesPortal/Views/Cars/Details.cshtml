@model SalesPortal.Models.Car

@{
    ViewData["Title"] = "Details";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Make: </b>
                            <a asp-controller="Makes" asp-action="Details" asp-route-id="@Model.MakeId">
                                @Model.Make.FullName
                            </a>
                        </p>
                        <p class="card-text"><b>CarCategory: </b>@Model.CarCategory</p>
                        <p class="card-text"><b>Year: </b>@Model.Year.ToString("yyyy")</p>
                        <p class="card-text"><b>Mileage: </b>@Model.Mileage</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>